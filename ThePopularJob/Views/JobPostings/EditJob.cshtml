@model JobViewModel

@{
    ViewBag.Title = "Edit Job";
}

<h1>@ViewBag.Title</h1>

<div class="row">
    <div class="col-md-12">
        <form method="post">
            <input type="hidden" asp-for="Job.Id" />
            <input type="hidden" asp-for="Job.Date" />
            <input type="hidden" asp-for="Job.Href" />
            <input type="hidden" asp-for="Job.OriginalWebsite" />
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Job.Title"></label>
                <input asp-for="Job.Title" class="form-control" />
                <span asp-validation-for="Job.Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Job.Company"></label>
                <input asp-for="Job.Company" class="form-control" />
                <span asp-validation-for="Job.Company" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Job.City"></label>
                <input asp-for="Job.City" class="form-control" />
                <span asp-validation-for="Job.City" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Job.State"></label>
                <input asp-for="Job.State" class="form-control" />
                <span asp-validation-for="Job.State" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Job.Description"></label>
                <textarea asp-for="Job.Description" class="form-control"></textarea>
                <span asp-validation-for="Job.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Job.LongDescription"></label>
                <textarea asp-for="Job.LongDescription" class="form-control" rows="5"></textarea>
            </div>
            <div class="form-group">
                <label asp-for="Job.SalaryId">Salary Range</label>
                <select asp-for="Job.SalaryId" asp-items="@(new SelectList(Model.Job.SalaryRange, "Key", "Value"))" class="form-control">
                    <option>Please select one</option>
                </select>
            </div>
            <div class="form-group">
                <label asp-for="Job.CategoryId"></label>
                <select asp-for="Job.CategoryId" asp-items="@(new SelectList(Model.Categories, "Id", "Name"))" class="form-control">
                    <option>Please select one</option>
                </select>
            </div>
            <button type="submit" class="btn btn-primary">Submit</button>
        </form>
    </div>
</div>